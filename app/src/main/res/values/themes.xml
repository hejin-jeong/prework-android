<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelloWorld" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Applying the new style that is defined below  -->
        <item name="actionBarStyle">@style/myActionBarStyle</item>
    </style>

    <!-- Our new style for ActionBar -->
    <style name="myActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">?attr/colorSecondaryVariant</item>
    </style>
</resources>